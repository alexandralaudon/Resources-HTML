
<form METHOD="POST" class="form-inline" role="form">
  <div class="form-group">
    <label class="sr-only" for="name">Name:</label>
    <input type="text" class="form-control" id="name" placeholder="Enter name">
  </div>
  <div class="form-group">
    <label class="sr-only" for="organization">Organization:</label>
    <input type="text" class="form-control" id="organization" placeholder="Enter organization">
  </div>
  <div class="form-group">
    <label class="sr-only" for="max_count">Maximum Count:</label>
    <input type="number" class="form-control" id="max_count" placeholder="Enter count">
  </div>
  <div class="button">
    <button type="submit">Create Resource</button>
    <a href="http://localhost:3000/resources">
      <input type="button" value="Cancel" />
    </a>
  </div>
</form>
